{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es2017",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "rootDir": ".",
    "types": ["react"],
    "paths": {
      "@utils": ["./src/app/utils"],
      "@reducers": ["./src/app/store/reducers"],
      "@epics": ["./src/app/store/epics"],
      "@actions": ["./src/app/store/actions"],
      "@components": ["./src/app/components"],
      "@screens": ["./src/app/screens"],
      "@redux": ["./src/app/store/redux"],
      "@styles": ["./src/app/styles"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
